@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="@isDarkMode" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        IASD.Sonoplastia
        <MudSpacer />
        <MudIconButton Icon="@IconButtonChangeTheme" Color="Color.Inherit" OnClick="@((e) => isDarkMode = !isDarkMode)" />

    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <NavMenuMain/>
    </MudDrawer>
    <MudMainContent Class="ma-2">
        @Body
        <Footer/>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = false;
    bool isDarkMode = false;
    string IconButtonChangeTheme => isDarkMode ? Icons.Material.Filled.DarkMode : Icons.Material.Filled.LightMode;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}